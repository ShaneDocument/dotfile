

" ******* Color theme *******
set cursorline
syntax on

:set nu
:set ai
:set cursorline
:set incsearch
:set expandtab
:set tabstop=4
" Set the tab to 4 sapces
:set ts=4 sw=4
:set mouse=" "
:set hlsearch
:set ignorecase
:set smartcase
:set shortmess-=S

:set foldmethod=marker

" insert a virtual space to the right of the last char (in normal mode)
set virtualedit+=onemore

" For showing the tab character
:set list
:set listchars=tab:»·


" Show file name even only one file is opened
set showtabline=2

" Set the no syntax file to syntax C
au BufNewFile,BufRead * if &syntax == '' | set syntax=C | endif

" Let the backspace work fine
set backspace=indent,eol,start

" Set swp files
:set directory=$HOME/.vim/swapfiles//
augroup cfg_as_c
    autocmd!
    autocmd BufRead,BufNewFile *.cfg set filetype=c
augroup END

